  #include<conio.h>
  void main()
    {
      int yr;
      clrscr();
      printf("\n Enter any year");
      scanf("%d",&yr);
      (yr%4==0)?printf("\n %d is a Leap year",yr):printf("\n Not a Leap year");
      getch();
    }