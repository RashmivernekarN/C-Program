/*prg to find sum,subtraction,product,division using switch*/
#include<stdio.h>
#include<conio.h>
void main()
 {
   float a,b,sum,sub,prod,div;
   char ch;
   clrscr();
   printf("\n Enter two nums");
   scanf("%f%f",&a,&b);

   fflush(stdin);
   printf("\n Enter operator");
   scanf("%c",&ch);

   switch(ch)
   {
   case '+':
       sum=a+b;
       printf("\n sum=%f",sum);
       break;
   case '-':
       sub=a-b;
       printf("\n subtraction=%f",sub);
       break;
   case '*':
       prod=a*b;
       printf("\n Product=%f",prod);
       break;
   case '/':
       div=a/b;
       printf("\n Division=%f",div);
       break;

   default:
      printf("\n Invalid choice");
   }

   getch();
 }
