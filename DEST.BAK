//program to illustrate destructor
#include<iostream.h>
#include<conio.h>
int count=0;
class alpha
{
   public:alpha()
	  {
		count++;
		cout<<"\nnumber of objects created="<<count;
	  }
	  ~alpha()
	  {
			cout<<"\nnumber of objects destroyed="<<count;
			count--;
	  }
	   };
 void main()
